<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mealer_tone2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginAsATextView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="bottom|center_horizontal"
            android:text="Login as a"
            android:textColor="@color/mealer_tone1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/adminTextView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center_horizontal|top"
            android:text="Admin"
            android:textColor="@color/mealer_tone1"
            android:textSize="60sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_admin_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/mealer_tone1"
            android:onClick="OnAdminLogin"
            android:text="Log in!" />

        <TextView
            android:id="@+id/backToMainLoginPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="OnMainPageFromAdminLogin"
            android:text="Come back to main login page"
            android:textColor="@color/mealer_tone1"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>