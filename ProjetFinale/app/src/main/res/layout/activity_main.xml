<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C17F1B"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/mealerLogoImageView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="30dp"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/loginAsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:text="Login as"
            android:textColor="#50290C" />

        <Button
            android:id="@+id/LCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="2dp"
            android:onClick="OnClientLogin"
            android:text="Login come Client" />

        <Button
            android:id="@+id/logCuisiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="2dp"
            android:onClick="OnCookerLogin"
            android:text="Login come Cuisiner" />

        <Button
            android:id="@+id/AdminLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="2dp"
            android:onClick="OnAdminLog"
            android:text="Login come Admin" />

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account yet?" />

        <TextView
            android:id="@+id/disconnectTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="bottom|center_horizontal"
            android:onClick="OnDisconnect"
            android:text="Disconnect"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>