<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_dialog_dialer" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_cook_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_logout" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_cook_welcomeMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome  cook" />

        <TextView
            android:id="@+id/txt_cook_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cook status" />

        <LinearLayout
            android:id="@+id/layout_cook_lists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cook_manage_meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANAGE MEALS" />

            <ListView
                android:id="@+id/list_cook_menuItems"
                android:layout_width="wrap_content"
                android:layout_height="276dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cook_manage_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANAGE ORDERS" />

            <ListView
                android:id="@+id/list_cook_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>