<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cook_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mealer_tone2"
    tools:context=".GUI.CookWelcome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_profil_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mealer_tone1"
                android:onClick="OnLogout"
                android:text="Update cook profil"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_cook_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mealer_tone1"
                android:onClick="OnLogout"
                android:text="@string/btn_logout" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_cook_welcomeMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome  cook" />

        <TextView
            android:id="@+id/txt_cook_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cook status" />

        <LinearLayout
            android:id="@+id/layout_cook_lists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cook_manage_meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mealer_tone1"
                android:onClick="OnManageMeals"
                android:text="MANAGE MEALS" />

            <Switch
                android:id="@+id/swUnavailableMeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="OnCheckAvailable"
                android:text="Include unavailable meals in the list"
                android:textOff="No"
                android:textOn="Yes" />

            <ListView
                android:id="@+id/list_cook_menuItems"
                android:layout_width="wrap_content"
                android:layout_height="276dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cook_manage_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mealer_tone1"
                android:onClick="OnManageOrders"
                android:text="MANAGE ORDERS" />

            <ListView
                android:id="@+id/list_cook_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>